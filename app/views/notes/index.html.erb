<h1>Listing notes</h1>

<table>
  <thead>
    <tr>
      <th>Patient</th>
      <th>User</th>
      <th>Primary author</th>
      <th>Primary institution</th>
      <th>Body text</th>
      <th>Ocr</th>
      <th>Type</th>
      <th>Title</th>
      <th>Filing date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.patient %></td>
        <td><%= note.user %></td>
        <td><%= note.primary_author %></td>
        <td><%= note.primary_institution %></td>
        <td><%= note.body_text %></td>
        <td><%= note.ocr %></td>
        <td><%= note.type %></td>
        <td><%= note.title %></td>
        <td><%= note.filing_date %></td>
        <td><%= link_to 'Show', note %></td>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path %>
